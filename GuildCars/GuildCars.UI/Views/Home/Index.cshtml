@using GuildCars.Models.ViewModels
@model HomepageVehiclesVM
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="jumbotron card card-image" style="background-image: url(https://mdbootstrap.com/img/Photos/Others/gradient1.jpg);">
        <div class="row">
            <div class="col-md-6">
                <h1>BIG HUGE SALE!!</h1>
                <p><small>Disclaimer: None of these cars are actually on sale. We just increased the price and then marked them down to actual retail.</small></p>
            </div>
            <div class="col-md-6">
                <div id="specialsCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @{int i = 0; }
                        @foreach (var special in Model.Specials)
                        {
                            if (i == 0)
                            {
                                <li data-target="#specialsCarousel" data-slide-to="@i" class="active"></li>
                            }
                            else
                            {
                                <li data-target="#specialsCarousel" data-slide-to="@i"></li>
                            }
                            i++;
                        }
                    </ol>
                    <div class="carousel-inner">
                        @{i = 0; }
                        @foreach (var special in Model.Specials)
                        {
                            if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block mx-auto" src="@Url.Content("~/images/placeholder.png")">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>@special.SpecialTitle</h5>
                                        <p>@special.SpecialDescription</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block mx-auto" src="@Url.Content("~/images/placeholder.png")">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>@special.SpecialTitle</h5>
                                        <p>@special.SpecialDescription</p>
                                    </div>
                                </div>
                            }
                            i++;
                        }
                    </div>
                    <a class="carousel-control-prev" href="#specialsCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#specialsCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <hr class="my-5">
    <div class="row">
        <div class="col-xs-4">
            <h2>Featured Vehicles</h2>
        </div>
    </div>

    <div class="row">
        @foreach (var featured in Model.FeaturedVehicles)
        {
            <div class="col-xs-12 col-sm-6 col-md-3">
                <p class="featuredVehicle"><img src="@Url.Content("~/images/" + featured.ImageFileName)" /></p>
                <p class="featuredVehicle">@featured.ModelYear @featured.MakeName @featured.ModelName</p>
                <p class="featuredVehicle">@featured.RetailPrice</p>
                <p class="featuredVehicle">@Html.ActionLink("View details placeholder", "Details", "Inventory", new { vin = featured.VIN }, null)</p>
            </div>
        }
    </div>
</div>

